{% extends 'base.html.twig' %}

{% block title %}Nueva Categoría{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/category.css') }}">
{% endblock %}

{% block body %}
    <div class="category-container fade-in">
        <h1 class="category-title">Nueva Categoría</h1>

        <div class="category-form">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Nombre de la categoría') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el nombre de la categoría'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.code, 'Código de la categoría') }}
                    {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el código de la categoría'}}) }}
                    {{ form_errors(form.code) }}
                </div>

                <div class="form-group file-input-group">
                    {{ form_label(form.image, 'Imagen de la categoría') }}
                    <div class="file-input-wrapper">
                        {{ form_widget(form.image, {'attr': {'class': 'file-input'}}) }}
                    </div>
                    {{ form_errors(form.image) }}
                    <small class="form-text">
                        Formatos permitidos: JPG, PNG, WEBP. Tamaño máximo: 5MB
                    </small>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i> Guardar
                </button>
            {{ form_end(form) }}

            <a href="{{ path('app_category_list') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
{% endblock %}