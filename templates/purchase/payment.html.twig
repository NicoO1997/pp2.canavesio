{% extends 'base.html.twig' %}

{% block title %}Pago Simulado
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.payment-container {
			max-width: 800px;
			margin: 2rem auto;
			padding: 2rem;
			background: white;
			border-radius: 12px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		.payment-header {
			text-align: center;
			margin-bottom: 2rem;
			padding-bottom: 1rem;
			border-bottom: 2px solid #f0f0f0;
		}

		.payment-grid {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 2rem;
		}

		.order-summary {
			background: #f8f9fa;
			padding: 1.5rem;
			border-radius: 8px;
			border: 1px solid #e9ecef;
		}

		.card-form {
			padding: 1.5rem;
			background: #fff;
			border: 1px solid #e9ecef;
			border-radius: 8px;
		}

		.form-group {
			margin-bottom: 1.5rem;
		}

		.form-group label {
			display: block;
			margin-bottom: 0.5rem;
			font-weight: 500;
			color: #495057;
		}

		.form-control {
			width: 100%;
			padding: 0.75rem;
			border: 2px solid #ddd;
			border-radius: 6px;
			transition: all 0.3s ease;
		}

		.form-control:focus {
			border-color: #80bdff;
			box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
			outline: none;
		}

		.card-header {
			position: relative;
			margin-bottom: 2rem;
		}

		.card-type {
			position: absolute;
			right: 1rem;
			top: 50%;
			transform: translateY(-50%);
			font-size: 1.5rem;
			color: #6c757d;
		}

		.expiry-cvv-grid {
			display: grid;
			grid-template-columns: 2fr 1fr;
			gap: 1rem;
		}

		.btn-submit {
			width: 100%;
			padding: 1rem;
			background: linear-gradient(135deg, #2d9346, #45b15c);
			color: white;
			border: none;
			border-radius: 6px;
			font-weight: 600;
			cursor: pointer;
			transition: all 0.3s ease;
		}

		.btn-submit:hover {
			background: linear-gradient(135deg, #45b15c, #2d9346);
			transform: translateY(-2px);
		}

		.error-message {
			color: #dc3545;
			font-size: 0.875rem;
			margin-top: 0.5rem;
		}

		.card-icon {
			font-size: 2rem;
			margin-right: 0.5rem;
		}

		.visa {
			color: #1a1f71;
		}
		.mastercard {
			color: #eb001b;
		}
		.amex {
			color: #006fcf;
		}
		.discover {
			color: #ff6000;
		}

		/* Animaciones */
		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(-10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.animate-in {
			animation: fadeIn 0.3s ease-out;
		}

		/* Responsive */
		@media(max-width: 768px) {
			.payment-grid {
				grid-template-columns: 1fr;
			}

			.payment-container {
				margin: 1rem;
				padding: 1rem;
			}
		}
	</style>
{% endblock %}

{% block body %}
    <div class="payment-container">
        <div class="payment-header">
            <h1>Finalizar Compra</h1>
        </div>

        <div class="payment-grid">
            <div class="order-summary">
                <h3>Resumen de la Compra</h3>
                {% if cart is defined %}
                    {# Resumen del carrito #}
                    <div class="cart-details">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in cart.cartProductOrders %}
                                    <tr>
                                        <td>{{ order.product.name }}</td>
                                        <td>{{ order.quantity }}</td>
                                        <td>${{ order.product.price|number_format(2) }}</td>
                                        <td>${{ (order.product.price * order.quantity)|number_format(2) }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>${{ total|number_format(2) }}</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                {% else %}
                    {# Resumen de producto individual #}
                    <div class="product-details">
                        <p><strong>Producto:</strong> {{ product.name }}</p>
                        <p><strong>Cantidad:</strong> {{ quantity }}</p>
                        <p><strong>Precio unitario:</strong> ${{ product.price|number_format(2) }}</p>
                        <p><strong>Total:</strong> ${{ total|number_format(2) }}</p>
                    </div>
                {% endif %}
            </div>

            <div class="card-form">
                <form id="payment-form" method="POST" action="{{ path('purchase_process') }}">
                    {% if cart is defined %}
                        <input type="hidden" name="is_cart_purchase" value="1">
                    {% else %}
                        <input type="hidden" name="product_id" value="{{ product.id }}">
                        <input type="hidden" name="quantity" value="{{ quantity }}">
                    {% endif %}

                    <div class="form-group">
                        <label for="card_number">NÃºmero de Tarjeta</label>
                        <div class="card-header">
                            <input type="text" id="card_number" name="card_number" class="form-control" maxlength="16" required placeholder="1234 5678 9012 3456">
                            <div class="card-type">
                                <i class="fas fa-credit-card" id="card-icon"></i>
                            </div>
                        </div>
                        <div class="error-message" id="card-error"></div>
                    </div>

                    <div class="expiry-cvv-grid">
                        <div class="form-group">
                            <label>Fecha de Vencimiento</label>
                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem;">
                                <select name="expiry_month" class="form-control" required>
                                    {% for i in 1..12 %}
                                        <option value="{{ i }}">{{ "%02d"|format(i) }}</option>
                                    {% endfor %}
                                </select>
                                <select name="expiry_year" class="form-control" required>
                                    {% for i in range(date()|date('Y'), date()|date('Y') + 10) %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="cvv">CVV</label>
                            <input type="text" id="cvv" name="cvv" class="form-control" maxlength="3" required placeholder="123">
                        </div>
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="fas fa-lock"></i>
                        Confirmar Pago
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cardInput = document.getElementById('card_number');
            const cardIcon = document.getElementById('card-icon');
            const cardError = document.getElementById('card-error');
            const form = document.getElementById('payment-form');
            const submitButton = form.querySelector('button[type="submit"]');

            const cardPatterns = {
                visa: /^4/,
                mastercard: /^5[1-5]/,
                amex: /^3[47]/,
                discover: /^6(?:011|5)/
            };

            function updateCardIcon(number) {
                cardIcon.className = 'fas fa-credit-card';
                Object.entries(cardPatterns).forEach(([card, pattern]) => {
                    if (pattern.test(number)) {
                        cardIcon.className = `fab fa-cc-${card} ${card}`;
                    }
                });
            }

            cardInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 16) {
                    value = value.substr(0, 16);
                }
                e.target.value = value;
                updateCardIcon(value);
            });

            form.addEventListener('submit', function(e) {
                e.preventDefault();
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Procesando...';
                cardError.style.display = 'none';

                const formData = new FormData(this);

                fetch(this.action, {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success === false) {
                        cardError.textContent = data.errors.join(', ');
                        cardError.style.display = 'block';
                        submitButton.disabled = false;
                        submitButton.innerHTML = '<i class="fas fa-lock"></i> Confirmar Pago';
                    } else {
                        window.location.href = data.redirect;
                    }
                })
                .catch(error => {
                    cardError.textContent = 'Error al procesar el pago. Por favor, intente nuevamente.';
                    cardError.style.display = 'block';
                    submitButton.disabled = false;
                    submitButton.innerHTML = '<i class="fas fa-lock"></i> Confirmar Pago';
                });
            });
        });
    </script>
{% endblock %}
