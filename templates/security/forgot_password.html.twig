{% extends 'base.html.twig' %}

{% block title %}Recuperar contraseña{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('styles/forgot_password.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Recuperar contraseña</h1>
            <p class="auth-subtitle">Ingrese sus datos para restablecer su contraseña</p>
        </div>
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle alert-icon"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fas fa-check-circle alert-icon"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
        
        <form method="post" class="auth-form">
            <div class="form-group">
                <label for="username_or_email">Correo o nombre de usuario</label>
                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-user"></i></span>
                    <input type="text" id="username_or_email" name="username_or_email" class="form-control" placeholder="Ingrese su correo o usuario" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="securityQuestion">Pregunta de seguridad</label>
                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-shield-alt"></i></span>
                    <select id="securityQuestion" name="securityQuestion" class="form-control" required>
                        <option value="">Seleccione una pregunta</option>
                        <option value="comida_favorita">¿Cuál es su comida favorita?</option>
                        <option value="nombre_mascota">¿Cuál es el nombre de su mascota?</option>
                        <option value="primer_trabajo">¿Cuál fue su primer trabajo?</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label for="securityAnswer">Respuesta</label>
                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-key"></i></span>
                    <input type="text" id="securityAnswer" name="securityAnswer" class="form-control" placeholder="Escriba su respuesta" required>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane"></i> Obtener token
                </button>
            </div>
            
            <div class="auth-footer">
                <a href="{{ path('app_login') }}" class="back-link">
                    <i class="fas fa-arrow-left"></i> Volver al inicio de sesión
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}