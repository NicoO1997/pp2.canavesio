{% extends 'base.html.twig' %}

{% block title %}Restablecer contraseña{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
:root {
  /* Color system - Modern professional palette */
  --brand-primary: #4361ee;
  --brand-primary-hover: #3a56d4;
  --brand-primary-active: #2f46b8;
  --brand-secondary: #7209b7;
  --accent-success: #06d6a0;
  --accent-danger: #e63946;
  --accent-warning: #f9c74f;
  --accent-info: #4cc9f0;
  
  /* UI grayscale spectrum */
  --gray-50: #f8fafc;
  --gray-100: #f1f5f9;
  --gray-200: #e2e8f0;
  --gray-300: #cbd5e1;
  --gray-400: #94a3b8;
  --gray-500: #64748b;
  --gray-600: #475569;
  --gray-700: #334155;
  --gray-800: #1e293b;
  --gray-900: #0f172a;
  --gray-950: #020617;
  
  /* Text colors */
  --text-primary: var(--gray-900);
  --text-secondary: var(--gray-700);
  --text-tertiary: var(--gray-500);
  --text-disabled: var(--gray-400);
  --text-on-brand: white;
  --text-on-accent: white;
  
  /* Background colors */
  --bg-body: #f0f2f5;
  --bg-card: white;
  --bg-input: white;
  --bg-input-hover: var(--gray-50);
  --bg-muted: var(--gray-100);
  
  /* Border colors */
  --border-light: var(--gray-200);
  --border-medium: var(--gray-300);
  --border-focus: var(--brand-primary);
  
  /* Shadow system */
  --shadow-xs: 0 1px 2px rgba(15, 23, 42, 0.04);
  --shadow-sm: 0 1px 3px rgba(15, 23, 42, 0.1), 0 1px 2px rgba(15, 23, 42, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(15, 23, 42, 0.1), 0 2px 4px -1px rgba(15, 23, 42, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(15, 23, 42, 0.1), 0 4px 6px -2px rgba(15, 23, 42, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(15, 23, 42, 0.1), 0 10px 10px -5px rgba(15, 23, 42, 0.04);
  --shadow-inner: inset 0 2px 4px rgba(15, 23, 42, 0.05);
  
  /* Focus ring */
  --focus-ring: 0 0 0 3px rgba(67, 97, 238, 0.3);
  
  /* Elevation and gradient backgrounds */
  --elevation-high: 0 20px 25px -5px rgba(15, 23, 42, 0.05), 0 10px 10px -5px rgba(15, 23, 42, 0.02);
  --header-gradient: linear-gradient(135deg, var(--brand-primary) 0%, var(--brand-secondary) 100%);
  
  /* Animation settings */
  --transition-fast: 0.15s ease;
  --transition-medium: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  --cubic-bounce: cubic-bezier(0.34, 1.56, 0.64, 1);
  --easing-standard: cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Spacing system */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-10: 2.5rem;
  --space-12: 3rem;
  --space-16: 4rem;
  
  /* Border radius */
  --radius-sm: 0.25rem;
  --radius: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
  --radius-full: 9999px;
  
  /* Typography */
  --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji';
  
  /* Font weights */
  --font-weight-normal: 400;
  --font-weight-medium: 500;  
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  /* Form element sizes */
  --input-height: 3.25rem;
  --button-height: 3.5rem;
}

/* Base reset */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Document setup */
html {
  font-family: var(--font-sans);
  -webkit-text-size-adjust: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  font-size: 16px;
  scroll-behavior: smooth;
}

body {
  background: var(--bg-body);
  color: var(--text-primary);
  line-height: 1.5;
  min-height: 100vh;
  position: relative;
}

/* Container */
.auth-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-6);
  background-image: 
    radial-gradient(circle at 100% 0%, rgba(67, 97, 238, 0.08) 0%, transparent 25%),
    radial-gradient(circle at 0% 80%, rgba(114, 9, 183, 0.08) 0%, transparent 30%),
    linear-gradient(to bottom, var(--bg-body), var(--gray-100));
}

/* Card */
.auth-card {
  width: 100%;
  max-width: 480px;
  background-color: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  overflow: hidden;
  position: relative;
  transform: translateY(40px);
  opacity: 0;
  animation: slideUpFadeIn 0.7s var(--cubic-bounce) forwards;
}

/* Active shine effect on card */
.auth-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    to right,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transform: skewX(-25deg);
  animation: shine 5s infinite;
}

/* Header section */
.auth-header {
  padding: var(--space-8) var(--space-8) var(--space-5);
  text-align: center;
  position: relative;
}

/* Decorative gradient overlay at top of card */
.auth-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: var(--header-gradient);
}

.auth-title {
  font-size: 1.625rem;
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-2);
  letter-spacing: -0.02em;
  opacity: 0;
  transform: translateY(20px);
  animation: slideUpFadeIn 0.6s var(--cubic-bounce) 0.2s forwards;
}

.auth-subtitle {
  font-size: 0.925rem;
  color: var(--text-secondary);
  margin-bottom: var(--space-4);
  opacity: 0;
  transform: translateY(15px);
  animation: slideUpFadeIn 0.6s var(--cubic-bounce) 0.3s forwards;
}

/* Form container */
.auth-form {
  padding: var(--space-6) var(--space-8) var(--space-10);
}

/* Alert styling */
.alert {
  display: flex;
  align-items: flex-start;
  padding: var(--space-4);
  margin-bottom: var(--space-6);
  border-radius: var(--radius-md);
  font-size: 0.875rem;
  line-height: 1.5;
  opacity: 0;
  animation: fadeInExpand 0.5s var(--easing-standard) 0.5s forwards;
}

.alert-icon {
  flex-shrink: 0;
  margin-right: var(--space-3);
  font-size: 1rem;
  margin-top: 0.125rem;
}

.alert-danger {
  background-color: rgba(230, 57, 70, 0.08);
  color: #cf1124;
  border-left: 3px solid var(--accent-danger);
}

.alert-success {
  background-color: rgba(6, 214, 160, 0.08);
  color: #057a55;
  border-left: 3px solid var(--accent-success);
}

/* Form group */
.form-group {
  margin-bottom: var(--space-6);
  opacity: 0;
  transform: translateY(15px);
  animation: slideUpFadeIn 0.5s var(--cubic-bounce) 0.4s forwards;
}

/* Form labels */
label {
  display: block;
  font-size: 0.875rem;
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: var(--space-2);
  transition: transform var(--transition-fast), color var(--transition-fast);
}

.input-group:focus-within + label,
label:has(+ .input-group:focus-within) {
  color: var(--brand-primary);
  transform: translateX(var(--space-1));
}

/* Input group and controls */
.input-group {
  position: relative;
  display: flex;
  align-items: center;
  transition: transform var(--transition-medium);
}

.input-icon {
  position: absolute;
  left: var(--space-4);
  color: var(--text-tertiary);
  font-size: 1rem;
  z-index: 2;
  transition: all var(--transition-medium);
  pointer-events: none;
}

.input-group:focus-within .input-icon {
  color: var(--brand-primary);
  text-shadow: 0 4px 8px rgba(67, 97, 238, 0.5);
}

.form-control {
  width: 100%;
  height: var(--input-height);
  padding: 0 var(--space-4) 0 var(--space-10);
  font-size: 0.95rem;
  font-weight: var(--font-weight-medium);
  background-color: var(--bg-input);
  border: 1px solid var(--border-light);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  transition: all var(--transition-medium);
  box-shadow: var(--shadow-inner), 0 0 0 transparent;
  appearance: none;
}

.form-control::-webkit-input-placeholder {
  color: var(--text-tertiary);
  opacity: 0.7;
}

.form-control::placeholder {
  color: var(--text-tertiary);
  opacity: 0.7;
}

.form-control:hover {
  border-color: var(--border-medium);
  background-color: var(--bg-input-hover);
}

/* Add focus state for form-control */
.form-control:focus {
  border-color: var(--border-focus);
  background-color: var(--bg-input);
  box-shadow: var(--focus-ring);
  outline: none;
}

/* Button styling */
.btn {
  display: inline-flex;
  align-items: center;          /* Centro vertical */
  justify-content: center;      /* Centro horizontal */
  height: var(--button-height);
  padding: 0 var(--space-6);
  font-size: 0.95rem;
  font-weight: var(--font-weight-medium);
  border-radius: var(--radius-md);
  border: none;
  cursor: pointer;
  transition: all var(--transition-medium);
  text-decoration: none;
  gap: var(--space-2);
  line-height: 1;              /* Mejora el centrado vertical del texto */
  text-align: center;          /* Asegura que el texto esté centrado */
}

.btn-primary {
  background-color: var(--brand-primary);
  color: var(--text-on-brand);
  box-shadow: 0 2px 4px rgba(67, 97, 238, 0.3);
}

.btn-primary:hover {
  background-color: var(--brand-primary-hover);
  box-shadow: 0 4px 8px rgba(67, 97, 238, 0.4);
  transform: translateY(-1px);
}

.btn-primary:active {
  background-color: var(--brand-primary-active);
  box-shadow: 0 1px 2px rgba(67, 97, 238, 0.2);
  transform: translateY(0);
}

/* Form actions styling */
.form-actions {
  margin-top: var(--space-8);
  opacity: 0;
  transform: translateY(15px);
  animation: slideUpFadeIn 0.5s var(--cubic-bounce) 0.5s forwards;
  display: flex;
  justify-content: center; /* Centra horizontalmente el contenido */
}

/* Auth footer styling */
.auth-footer {
  margin-top: var(--space-8);
  text-align: center;
  opacity: 0;
  transform: translateY(15px);
  animation: slideUpFadeIn 0.5s var(--cubic-bounce) 0.6s forwards;
}

.back-link {
  display: inline-flex;
  align-items: center;
  color: var(--text-secondary);
  font-size: 0.9rem;
  text-decoration: none;
  transition: color var(--transition-fast);
  gap: var(--space-2);
}

.back-link:hover {
  color: var(--brand-primary);
}

/* Aseguramos que el icono también tenga transición */
.back-link i {
  transition: transform var(--transition-fast);
}

.back-link:hover i {
  transform: translateX(-3px);
}

/* Missing animations */
@keyframes slideUpFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInExpand {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes shine {
  0% {
    left: -100%;
  }
  20% {
    left: 100%;
  }
  100% {
    left: 100%;
  }
}

/* Responsive adjustments */
@media (max-width: 576px) {
  .auth-card {
    max-width: 100%;
  }
  
  .auth-header {
    padding: var(--space-6) var(--space-4) var(--space-4);
  }
  
  .auth-form {
    padding: var(--space-4) var(--space-4) var(--space-8);
  }
  
  .auth-title {
    font-size: 1.5rem;
  }
  
  .form-actions {
    flex-direction: column;
  }
  
  .btn {
    width: 100%;
  }
}

/* Accesibilidad - Focus visible para navegación por teclado */
:focus-visible {
  outline: 2px solid var(--brand-primary);
  outline-offset: 2px;
}

/* Estado de carga para el botón */
.btn.is-loading {
  position: relative;
  color: transparent;
  pointer-events: none;
}

.btn.is-loading::after {
  content: '';
  position: absolute;
  width: 1.25rem;
  height: 1.25rem;
  top: calc(50% - 0.625rem);
  left: calc(50% - 0.625rem);
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.25);
  border-top-color: white;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
</style>
{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Restablecer contraseña</h1>
            <p class="auth-subtitle">Crea una nueva contraseña segura para tu cuenta</p>
        
        </div>
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle alert-icon"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fas fa-check-circle alert-icon"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
        
        <form method="post" class="auth-form">
            <input type="hidden" name="token" value="{{ token }}">
            
            <div class="form-group">
                <label for="password">Nueva contraseña</label>
                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Ingrese su nueva contraseña" required>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Actualizar contraseña
                </button>
            </div>
            
            <div class="auth-footer">
                <a href="{{ path('app_login') }}" class="back-link">
                    <i class="fas fa-arrow-left"></i> Volver al inicio de sesión
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}